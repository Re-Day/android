<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Font -->
    <style name="HeadLine1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadLine2">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeadLine3">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitle1">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubTitle2">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SubTitle3">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="body1">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body2">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption1">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption2">
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 온보딩 editText -->
    <style name="OnboardingEditText" parent="body1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/gray8</item>
        <item name="android:textColorHint">@color/gray5</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- next 버튼 -->
    <style name="NextButton" parent="HeadLine1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:backgroundTint">@drawable/background_next_button</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>